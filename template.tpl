const log = require('logToConsole');
const injectScript = require('injectScript');
const callInWindow = require('callInWindow');
const setInWindow = require('setInWindow');

const heroSettings = {
  applicationId: data.applicationId
};

for(let key in data){
  if(key === 'config') {
    const dataArr = data[key];
    dataArr.reduce((obj, item) => {
    heroSettings[item.key] = item.value;
   }, {});
  }
}

const onLoadedScript = () => {
  log('Script loaded successfully');
};

const onScriptError = (err) => {
  log('Error while loading script');
  return;
};

log('HeroWebPluginSettings', heroSettings);
const setConfig = setInWindow('HeroWebPluginSettings', heroSettings);

if(setConfig){
  injectScript(
    'https://cdn.usehero.com/loader.js',
    onLoadedScript,
    onScriptError,
    'hero'
  );
}

const queue = (params) => {
  callInWindow('hero.q.push', params);
};

setInWindow('HeroObject', 'hero');

setInWindow('hero', function(params) {
  queue(arguments);
});

setInWindow('hero.q', []);

data.gtmOnSuccess();


